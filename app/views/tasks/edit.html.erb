<h3>スケジュール編集</h3>

<% if flash[:failure] %>
  <p class="alert alert__failure"><%= flash[:failure] %></p>
<% end %>
<%= render"shared/error",obj: @task %>
<%= form_with model: @task do |f| %>
  <table>
    <tr>
      <th><%= f.label :title, "タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>
    <tr>
      <th><%= f.label :start_day, "開始日" %></th>
      <td><%= f.date_field :start_day %></td>
    </tr>
    <tr>
      <th><%= f.label :end_day, "終了日" %></th>
      <td><%= f.date_field :end_day %></td>
    </tr>

    <tr>
      <th><%= f.label :all_day, "終日" %></th>
      <td><%= f.check_box :all_day %>
        <p>終日の場合はチェックを入れます</p>
      </td>
    </tr>

    <tr>
      <th><%= f.label :memo, "スケジュールメモ" %></th>
      <td><%= f.text_area :memo %></td>
    </tr>
  </table>
  <div>
    <ul>
      <li><%= f.submit "スケジュールの編集を完了する" %></li>
      <li><%= link_to "スケジュール一覧に戻る", :tasks %></li>
    </ul>
  </div>
<% end %>

<footer>
  <h1>現在の日時 : <%= @date %></h1>
</footer>