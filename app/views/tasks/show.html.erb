<h3>スケジュール詳細</h3>

<table>
  <tr>
    <th>タイトル</th>
    <td><%= @task.title %></td>
  </tr>
  <tr>
    <th>開始日</th>
    <td><%= @task.start_day %></td>
  </tr>
  <tr>
    <th>投稿日時</th>
    <td><%= @task.updated_at.to_s(:datetime_jp) %></td>
  </tr>
  <tr>
    <th>終日</th>
    <td><%= @task.all_day %></td>
  </tr>

  <tr>
    <th>スケジュールメモ</th>
    <td><%= @task.memo %></td>
  </tr>


</table>

<div>
  <ul>
    <li><%= link_to "スケジュール一覧に戻る", :tasks %></li>
  </ul>
</div>