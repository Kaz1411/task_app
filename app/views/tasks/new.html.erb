<h3>スケジュール新規登録</h3>

<%= form_with model: @tasks do |f| %>
  <table>
    <tr>
      <th><%= f.label :title, "タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>

    <tr>
      <th><%= f.label :start_day, "開始日" %></th>
      <td><%= f.text_field :start_day ,:class => 'datepicker'%></td>
    </tr>


    <tr>
      <th><%= f.label :end_day, "終了日" %></th>
      <td><%= f.text_field :end_day %></td>
    </tr>

    <tr>
      <th><%= f.label :all_day, "終日" %></th>
      <td><%= f.text_field :all_day %></td>
    </tr>

    <tr>
      <th><%= f.label :memo, "スケジュールメモ" %></th>
      <td><%= f.text_area :memo %></td>
    </tr>
  </table>

  <div>
    <ul>
      <li><%= f.submit "スケジュール新規登録する"%></li>
      <li><%= link_to "ユーザー情報一覧に戻る", :tasks %></li>
    </ul>
  </div>
<% end %>